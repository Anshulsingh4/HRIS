<style>
    body {
        background-color: rgba(0, 0, 0, 0.7)
    }
</style>
<% layout('layouts/boilerplate')%>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="card" style="height: 24rem;">
                    <div class="card-body ">
                        <h5 class="card-title  d-flex justify-content-center ">BASIC DETAILS</h5>

                        <div class="my-3">
                            <%= detail.fullname %>
                                <br>
                                <%= detail.role %>
                                    <br>
                                    <%= detail.id %>
                        </div>
                        <div class="my-3">
                            <%= detail.email%>
                                <br>
                                <%= detail.contactNumber %>
                        </div>
                        <a href="/fulldetails" class="btn btn-primary d-flex justify-content-center">FULL DETAIL</a>
                        <br>
                        <div class='d-flex justify-content-between'>
                            <% if(detail.type==="admin" ) { %>
                                <a href="/newUser" class="btn btn-success mt-3">CREATE A NEW USER</a>
                                <a href="/alluser" class="btn btn-success mt-3">ALL USERS</a>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card" style="height: 24rem;">
                    <div class="card-body  d-flex  flex-column align-items-center">
                        <h5 class="card-title">CALENDER</h5>
                        <hr>
                        <iframe
                            src="https://calendar.google.com/calendar/embed?src=en.indian%23holiday%40group.v.calendar.google.com&ctz=Asia%2FKolkata"
                            style="border: 0" width="600" height="300" frameborder="0" scrolling="no"></iframe>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-sm-6">
                <div class="card" style="height: 24rem;">
                    <% if(detail.type==='user' ) {%>
                        <div class="card-body  d-flex  flex-column align-items-center">
                            <h5 class="card-title">REQUEST</h5>
                            <p class="mt-3">Here you can check your attendance status.</p>
                            <a href="/attendancestatus" class="btn btn-primary  ">Attendance Status</a>
                            <!-- <p class="mt-3">Here you can apply for your leave request.</p> 
                            <a href="/leaverequest" class="btn btn-primary  ">Apply for leave</a>
                            <p class="mt-3">Here you can check your leave status.</p>
                            <a href="/leavestatus" class="btn btn-primary ">Leave request status</a> -->
                        </div>
                        <% } else {%>
                            <div class="card-body  d-flex  flex-column align-items-center">
                                <h5 class="card-title">APPROVAL</h5>

                                <p class="mt-3">Here you can action on attendance request.</p>
                                <a href="/actionattendance" class="btn btn-primary  ">Action to Attendance Request</a>
                                <!-- <p class="mt-3">Here you can action on leave request.</p>
                                <a href="/leavestatus" class="btn btn-primary  ">Action to Leave Request</a> -->
                            </div>
                            <% } %>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card" style="height: 24rem;">
                    <div class="card-body  d-flex  flex-column">
                        <h5 class="card-title d-flex justify-content-center">POLICIES</h5>
                        <a href="https://bigstep.hrone.cloud/Documents/bigstep/PolicyDocument/gvmMa1IQ_BigStepLeavePolicy_Updated_April2021.pdf"
                            target="_blank" class="btn btn-primary mt-4">Leave Policy 2021</a>
                        <a href="https://www.dropbox.com/s/qq156qm4t2u35s2/BigStep%20Insider.pdf?dl=0" target="_blank"
                            class="btn btn-primary mt-4">Bigstep Insider</a>
                        <a href="https://bigstep.hrone.cloud/Documents/bigstep/PolicyDocument/IaJT4X8l_Calendar.pdf"
                            target="_blank" class="btn btn-primary mt-4">Holiday Calender 2021</a>
                    </div>
                </div>
            </div>
        </div>

    </div>