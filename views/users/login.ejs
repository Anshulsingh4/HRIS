<body class="login">
    <%- include('../partials/flash')%>
        <div class="container justify-content-center align-items-center" id='card'>
            <div class=" row ">
                <div class="col d-flex justify-content-center ">
                    <div class="cardlogin card shadow" style="width: 22rem;  ">
                        <div class="card-body mb-3 ">
                            <h1 class="card-title d-flex justify-content-center" style="color:lightgreen">HR-IS</h5>
                                <p class="card-subtitle d-flex justify-content-center text-muted">Enabling better
                                    workplace
                                </p>
                                <form action="/login" method="POST" class="validated-form" novalidate>
                                    <div class="mb-3 mt-2">
                                        <label class="form-label" for="username">Username</label>
                                        <input class="form-control" type="text" id="username" name="username" autofocus
                                            required>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="password">Password</label>
                                        <input class="form-control" type="password" id="password" name="password"
                                            required>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                    <div class="mt-5 d-flex justify-content-center">
                                        <button class="btn btn-success"> Login</button>
                                    </div>
                                </form>
                        </div>
                        <div class="mb-3 d-flex justify-content-center">
